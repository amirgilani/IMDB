<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colordetailActivityBackground"

    android:layout_width="match_parent">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgPosterBackground"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:text="@string/main_item_list_sample"
        android:textColor="#f0f0f0"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="14dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal"  >
        <TextView
            android:id="@+id/tvGenre"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/main_item_list_sample_bottom"
            android:textColor="#a8a8a8"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tvRuntime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/main_item_list_sample_bottom"
            android:textColor="#a8a8a8"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:text="@string/main_item_list_sample_bottom"
        android:textColor="#f0f0f0"
        android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/oscar_ic"/>
    <TextView
        android:id="@+id/tvAwards"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/start"
        android:text="@string/main_item_list_sample_bottom"
        android:textColor="#f0f0f0"
        android:textSize="12sp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="150dp"
            android:layout_height="190dp"

             />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/start"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/start_ic"/>
            <TextView
                android:id="@+id/tvRates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/start"
                android:text="@string/main_item_list_sample_bottom"
                android:textColor="#f0f0f0"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvRateCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRates"
                android:layout_marginLeft="10dp"

                android:layout_toRightOf="@id/start"
                android:text="@string/main_item_list_sample_bottom"
                android:textColor="#a8a8a8"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvMetaScore"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="77"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="14sp"
                android:background="#62c74f"
                android:layout_below="@id/start"
                android:src="@mipmap/start_ic"/>
            <TextView
                android:id="@+id/tvMetascoreTitle"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"

                android:layout_height="wrap_content"
                android:layout_below="@id/start"

                android:layout_toRightOf="@id/tvMetaScore"
                android:text="Metascore"
                android:textColor="#f0f0f0"
                android:textSize="12sp" />
            <TextView
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tvMetascoreTitle"
                android:layout_toRightOf="@id/tvMetaScore"
                android:text="N/A"
                android:textColor="#a8a8a8"
                android:textSize="12sp" />
        </RelativeLayout>


    </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="8dp"
            card_view:cardBackgroundColor="#0277bd"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp"
            card_view:cardPreventCornerOverlap="false">
            <TextView
                 android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ADD TO WATCHLISTS"
                android:textColor="#f0f0f0"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

</LinearLayout>
</ScrollView>